<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		<variable
			name = "choiceVM"
			type = "com.example.myapplication.viewmodel.ChoiceViewModel"
		/>
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/lightgrey"
		android:orientation="vertical"
		tools:context=".actfragview.ButFragment2">

		<Button
			android:id="@+id/but1"
			style="@style/ButtonNew"
			android:layout_gravity="center"
			android:layout_margin="30dp"
			android:text="@{choiceVM.name[0]}" />

		<Button
			android:id="@+id/but2"
			style="@style/ButtonNew"
			android:layout_gravity="center"
			android:layout_margin="30dp"
			android:text="@{choiceVM.name[1]}" />

		<Button
			android:id="@+id/but3"
			style="@style/ButtonNew"
			android:layout_gravity="center"
			android:layout_margin="30dp"
			android:text="@{choiceVM.name[2]}" />

		<Button
			android:id="@+id/but4"
			style="@style/ButtonNew"
			android:layout_gravity="center"
			android:layout_margin="30dp"
			android:text="@{choiceVM.name[3]}" />
			
	</LinearLayout>
</layout>